---
import { Button } from "@/components/ui/button"
---

<div class="min-h-screen w-full flex flex-col items-center justify-center bg-white px-4">
	<div class="space-y-12">
		<h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-light tracking-tight text-black text-center animate-fade-in">
			Bienvenido a mi mundo
		</h1>

		<div class="flex justify-center">
			<Button
				variant="outline"
				size="lg"
				class="group relative overflow-hidden border-black text-black hover:text-white transition-colors duration-500"
			>
				<span class="relative z-10">Explorar</span>
				<span class="absolute inset-0 bg-black transform translate-y-full group-hover:translate-y-0 transition-transform duration-500 ease-out"></span>
			</Button>
		</div>
	</div>
</div>

<style>
	@keyframes fade-in {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.animate-fade-in {
		animation: fade-in 1.2s ease-out;
	}
</style>